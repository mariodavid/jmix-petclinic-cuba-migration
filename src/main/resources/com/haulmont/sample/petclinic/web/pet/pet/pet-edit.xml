<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<window xmlns="http://jmix.io/schema/ui/window" xmlns:dynattr="http://jmix.io/schema/dynattr/ui"
        xmlns:cuba="http://schemas.haulmont.com/cuba/screen/compatibility"
        caption="msg://editorCaption"
        focusComponent="fieldGroup"
>
    <data>
        <instance id="petDc"
                  class="com.haulmont.sample.petclinic.entity.pet.Pet"
                  fetchPlan="pet-with-owner-and-type">
            <loader/>
        </instance>

        <collection id="ownersDc" class="com.haulmont.sample.petclinic.entity.owner.Owner" fetchPlan="_base">
            <loader>
                <query>
                    select e from petclinic_Owner e
                </query>
            </loader>
        </collection>

        <collection id="typesDc" class="com.haulmont.sample.petclinic.entity.pet.PetType" fetchPlan="_base">
            <loader>
                <query>
                    select e from petclinic_PetType e order by e.name
                </query>
            </loader>
        </collection>
    </data>

    <dialogMode
            width="800px"
            height="600px"
            forceDialog="true"/>

    <layout expand="editActions" spacing="true">
        <form id="fieldGroup" dataContainer="petDc">
            <column width="250px">
                <textField property="name" colspan="2" width="100%"/>
                <lookupPickerField property="type" optionsContainer="typesDc"/>
                <lookupPickerField property="owner" optionsContainer="ownersDc"/>
            </column>
            <column width="250px">
                <textField property="identificationNumber"/>
                <dateField property="birthDate"/>
            </column>
        </form>


        <hbox id="editActions" spacing="true">
            <button action="windowCommitAndClose"/>
            <button action="windowClose"/>
        </hbox>
    </layout>
    <facets>
        <dynattr:dynamicAttributes/>
    </facets>
</window>
